# Database configuration (required)
database:
  host: localhost
  port: 5432
  name: r4dar
  user: postgres
  password: your_password_here

# Data directory for storing downloaded files (required)
data_dir: ./data

# API configurations (optional)
api:
  # Etherscan API configuration for fetching verified contracts
  etherscan:
    key: your_etherscan_api_key_here

  # OpenAI API configuration for AI features
  openai:
    key: your_openai_api_key_here
    model: gpt-4-1106-preview  # or gpt-4, gpt-3.5-turbo

# GitHub configuration (optional)
github:
  api_token: your_github_token_here  # Optional - higher rate limits with token
  poll_interval: 300  # How often to check for updates (seconds)

# Watcher configuration (optional)
watchers:
  enabled: false  # Set to true to enable watchers
  webhook_port: 8080  # Port for webhook server
  active_watchers:  # List of watchers to enable
    # - github  # Uncomment to enable GitHub watcher
    # - immunefi  # Uncomment to enable Immunefi watcher

# Extension configuration
extensions_dir: extensions  # Directory containing extensions
active_extensions:  # List of extensions to load
  - semgrep  # Enable semgrep extension

telegram:
  bot_token: "your-bot-token"
  chat_id: "your-chat-id" 